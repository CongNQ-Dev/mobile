<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HomeActivity">
        <LinearLayout
            android:id="@+id/home_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ce102c"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/dropdown_button"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_drop_down"
                android:layout_marginLeft="10dp"
                ></ImageView>

            <TextView
                android:id="@+id/shop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                ></TextView>

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:src="@drawable/ic_search"
                ></ImageView>

            <ImageView
                android:id="@+id/cart_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_cart"
                ></ImageView>

            <ImageView
                android:id="@+id/product_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_product_edit"
                ></ImageView>
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/home_navbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ce102c"
            android:layout_below="@id/home_header"
            android:textAlignment="gravity"
            app:menu="@menu/navbar_menu"
            app:itemTextColor="@color/custom_color_navigation"
            app:itemIconTint="@color/custom_color_navigation"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_navbar"
            />

</RelativeLayout>